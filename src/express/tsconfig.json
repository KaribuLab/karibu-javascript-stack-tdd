{
  "compilerOptions": {
      "rootDirs": [
          "src",
          "test"
      ],
      "target": "ES5",
      "module": "commonjs",
      "outDir": ".",
      "strict": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
  },
  "include": [
      "./src/**/*.ts",
      "./test/**/*.spec.ts",
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}